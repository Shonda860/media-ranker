<main>
  <section class="media-table">
    <h2>List of Works</h2><br>

    <% Work.category.each do |category_name,works|%>
      <h4><%= category_name.upcase %>S</h4>
      <div class="containter-lg">

        <table class="table">
          <thead>
            <tr>
              <th>Votes</th>
              <th>Title</th>
              <th>Catergory</th>
              <th>Created By</th>
              <th>Published</th>
              <th>Upvote</th>
            </tr>
          <thead>
              
          <tbody>
            <% works.each do |work| %>
              <tr>
                <td><%=%></td>
                <td><%= link_to work.title,work_path(work.id) %></td>
                <td><%= work.category %></td>
                <td><%= work.creator %></td>
                <td><%= work.publication_year %></td>
                <td>Upvote</td>
              </tr> 
            <% end %> 
          </tbody>
        </table>
        </div>
    <% end %>
  </section>
</main>


