<h2>Works</h2>
 <table>
      <thead>
        <tr>
          <th>Category</th>
          <th>Title</th>
          <th>Created By</th>
          <th>Publication Year</th>
          <th>Description</th>
        </tr>
      </thead>
      </tbody>

<% if @works.length > 0 %>
    <% @works.each do |work| %>
    <tr>
      <td><%= work.category %></td>
      <td><%= work.title %></td>
      <td><%= work.creator %></td>
      <td><%= work.publication_year %></td>
      <td><%= work.description %></td>
    </tr> 
    <% end %> 
    </table>
  <% else %>
  <h2>No Works in the system</h2>
<% end %>
