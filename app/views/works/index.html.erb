<main>
  <h2>List of Works</h2><br>
    <section class="media-table">
      <% Work.category.each do |category_name,works|%>
        <h4><%= category_name.capitalize %>s</h4>
     

        <table class="table">
          <thead>
            <tr>
              <th>Votes</th>
              <th>Title</th>
              <th>Catergory</th>
              <th>Created By</th>
              <th>Published</th>
              <th>Upvote</th>
            </tr>
          <thead>
              
          <tbody>
            <% works.each do |work| %>
              <tr>
                 <td><%= work.votes.length %></td>
                <td><%= link_to work.title,work_path(work.id) %></td>
                <td><%= work.category %></td>
                <td><%= work.creator %></td>
                <td><%= work.publication_year %></td>
                <td><%= link_to "Upvote", upvote_path(work.id), method: :patch, class: "btn btn-primary"%></td>
              </tr> 
            <% end %> 
          </tbody>
        </table>
    <% end %>
  </section>
  <%=link_to "View top media", root_path, class:"btn btn-secondary" %>
  <%=link_to "Add a new work", root_path, class:"btn btn-primary" %>
</main>


