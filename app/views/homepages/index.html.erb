<main>
  <section class="spotlight">
    <h2 class="spotlight__header">
      <span class="spotlight__header--prefix">
         "Media Spotlight" *::after
      </span>
      <a class="spotlight_link-to" href=""><%=Work.spotlight.title%>by<%=Work.spotlight.creator%></a>
    </h2>

  <p class="spotlight__description"></p>
  </section>

  
    
   <hr class="root__hr">  
   <section class="top-ten__container">
       <section class="top-ten__list-container">
       <%top_movies = Work.top_ten("movie")%>
        <h2 class="top-ten__header"> Top Movies
      <h2> 
          <%if top_movies.length > 0%>
           <%top_movies.each do |movie|%>
          <ul class="list-group top-ten__list">
            <li class="list-group-item">
              <%= link_to movie.title, work_path(movie.id)%>
              <h4><a href=""><%= link_to movie.title, work_path(movie.id)%></a> <br>
                <small class="top-ten__creator">by<%=movie.creator%></small> 
              </h4>
              <p><%=movie.votes.count%>votes</p>  
            </li>  
            <%end%>
            <%else%>
               <p>No Movies have been created in system</p>
             <%end%>
          </ul>     
  </section> 
     <hr class="root__hr">  
   <section class="top-ten__container">
       <section class="top-ten__list-container">
       <%top_books = Work.top_ten("book")%>
